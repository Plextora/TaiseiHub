<Window x:Class="TaiseiHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaiseiHub"
        mc:Ignorable="d"
        Title="Taisei Hub"
        Height="450"
        Width="700"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="HoverButton">
            <Border Name="RootElement" BorderThickness="1">

                <Grid>
                    <Grid.Background>
                        <SolidColorBrush x:Name="ButtonBackground" Color="#191919"/>
                    </Grid.Background>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="4,5,4,4"/>
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#191919" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#252525" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#353535" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>
    </Window.Resources>

    <Grid
        x:Name="MainGrid"
        Background="#151515">
        <Button
            x:Name="CloseButton"
            Content="&#xE894;"
            Foreground="PeachPuff"
            FontFamily="Segoe MDL2 Assets"
            Template="{StaticResource HoverButton}"
            Height="62"
            Width="61"
            Margin="639,0,0,0"
            VerticalAlignment="Top"
            Click="CloseButton_Click"/>
        <Button
            x:Name="MinimizeButton"
            Content="&#xE738;"
            Foreground="PeachPuff"
            FontFamily="Segoe MDL2 Assets"
            Template="{StaticResource HoverButton}"
            Height="62"
            Width="61"
            Margin="580,0,59,0"
            VerticalAlignment="Top"
            Click="MinimizeButton_Click"/>
        <Grid
            Panel.ZIndex="-1">
            <Rectangle
                x:Name="WindowToolbar"
                HorizontalAlignment="Center"
                Height="62"
                Width="700"
                Fill="#161616"
                Stroke="PeachPuff"
                StrokeThickness="0.5"
                VerticalAlignment="Top"
                MouseLeftButtonDown="WindowToolbar_MouseLeftButtonDown"/>
        </Grid>
        <Label
            x:Name="TitleLabel"
            Content="Taisei Hub"
            FontFamily="Segoe UI Semilight"
            FontSize="25px"
            Foreground="PeachPuff"
            HorizontalAlignment="Left"
            Margin="10,9,0,0"
            VerticalAlignment="Top"/>
        <Label
            x:Name="StatusLabel"
            Content="Game Status: Unknown"
            FontFamily="Segoe UI Light"
            FontSize="15px"
            Foreground="PeachPuff"
            HorizontalAlignment="Left"
            Margin="10,420,0,0"
            VerticalAlignment="Top"/>

    </Grid>
</Window>
